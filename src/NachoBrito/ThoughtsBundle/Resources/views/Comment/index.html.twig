{% extends '::base.html.twig' %}

{% block body -%}
<h1>Comment list</h1>

<table class="records_list table table-hover">
    <thead>
        <tr>
            <th>Createdat</th>
            <th>Body</th>
            <th>Depth</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>                
            <td><a href="{{ path('cm_show', { 'id': entity.id }) }}">{{ entity.body }}</a></td>
            <td>{{ entity.depth }}</td>
            <td>{{ entity.state }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('cm_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cm_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('cm_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
