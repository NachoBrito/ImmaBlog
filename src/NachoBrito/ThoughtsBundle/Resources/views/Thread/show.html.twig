{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Thread</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Permalink</th>
                <td>{{ entity.permalink }}</td>
            </tr>
            <tr>
                <th>Iscommentable</th>
                <td>{{ entity.isCommentable }}</td>
            </tr>
            <tr>
                <th>Numcomments</th>
                <td>{{ entity.numComments }}</td>
            </tr>
            <tr>
                <th>Lastcommentat</th>
                <td>{{ entity.lastCommentAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('th') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
