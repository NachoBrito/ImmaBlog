{% extends '::base.html.twig' %}

{% block body -%}
<h1>Thought list</h1>

<table class="records_list table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>                
            <th>Created</th>
            <th>Contentchanged</th>
            <th>Public</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('t_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>                
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.contentChanged %}{{ entity.contentChanged|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.public }}</td>
            <td>
                <a class="btn btn-mini" href="{{ path('t_edit', { 'id': entity.id }) }}">edit</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<div class="control-group">
    <a class="btn" href="{{ path('t_new') }}">
        Create a new entry
    </a>
</div>
{% endblock %}
