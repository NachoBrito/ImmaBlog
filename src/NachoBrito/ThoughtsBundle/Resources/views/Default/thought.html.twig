{% extends 'NachoBritoThoughtsBundle:Default:index.html.twig' %}

{% block title %}{{ thought.title }}{% endblock %}

{% block body %}
<div class="row-fluid" id="immablog-main">
    <div class="span8 offset2" id="thought-content">
        <div class="row-fluid">
            <div id="immablog-single-thought">
                <article>
                    <h1>{{ thought.title }}</h1>
                    <div class="abstract">
                        {{ thought.abstractHTML | raw }}
                    </div>
                    {{ thought.contentHTML | raw }}
                </article>
            </div>
        </div>

    </div>
</div>
<div class='row-fluid' id='comments-row'>
    <div class='span6'>
        <aside>
            <h3><i class='fa fa-comments-o'></i> {{'immablog.thought.comments'|transchoice(thought.children.count, {})}}</h3>                
            {% if thought.children %}
            {% for entry in thought.children %}
            {{ include('NachoBritoThoughtsBundle:Default:comment.html.twig', {'thought': entry}) }}
            {% endfor %}
            {% endif %} 
        </aside>
    </div>
    <div class="span6">
        <div id='new-comment-form'>
            {{ include('NachoBritoThoughtsBundle:Default:comment-form.html.twig', {'form': comment_form}) }}
            
            <a class='btn-link activate-comments'><i class='fa fa-comment'></i> <span>{{'immablog.thought.comments.new'|trans  }}</span></a>                
            <form name="frm-new-comment" action="">
                <div class="control-group">
                    <label class='control-label' for='new-comment[email]'>{{'immablog.thought.comments.new.email'|trans  }}</label>
                    <div class='controls'>
                        <input type='email' name='new-comment[email]' placeholder="Email" />
                    </div>
                </div>
                <div class="control-group">
                    <label class='control-label' for='new-comment[text]'>{{'immablog.thought.comments.new.text'|trans  }}</label>
                    <div class='controls'>
                        <textarea name="new-comment['text']"></textarea>
                    </div>
                </div>
                <div class='btn-toolbar'>
                    <button type='submit' class='btn btn-success' name='submit' value='{{'immablog.thought.comments.new.submit'|trans  }}' />
                </div>
            </form>
        </div>            
    </div>    
</div>
{% endblock %}
